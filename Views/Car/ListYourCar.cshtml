@model RentYourCar.Models.Car

@{
    ViewBag.Title = "List Your Car";
}


@using (Html.BeginForm()) 
{

@Html.AntiForgeryToken()
<div class="container">
    <h1 class="well">List Your Car</h1>
    <div class="col-lg-12 well">
    <div class="row"> 
    
     						           
		    <div class="form-group">
                <label>Make</label>
							
                <div >								
                    @Html.DropDownList("Make", 
                    new SelectList(Enum.GetValues(typeof(RentYourCar.Models.Make))),
                    "Select Make",
                    new { @class = "form-control" })
								
                    @Html.ValidationMessageFor(model => model.Make, "", new { @class = "text-danger" })
								
                </div>
            </div>


			<div class="form-group">
                <label>Model</label>
                            
                <div >                             
                    @Html.DropDownList("Model", 
                    new SelectList(Enum.GetValues(typeof(RentYourCar.Models.Model))),
                    "Select Model",
                    new { @class = "form-control" })
                                
                    @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
                                
                </div>
            </div>
      
      <div class="form-group">
            <label>Year</label>
            <div >
                @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
            </div>
      </div>

    <div class="form-group">
            <label>Odometer</label>
            <div >
                @Html.EditorFor(model => model.Odometer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Odometer, "", new { @class = "text-danger" })
            </div>
      </div>					
                
    <div class="form-group">
            <label>Color</label>
            <div >
                @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
            </div>
      </div>    


       <div class="form-group">
            <label>Car Location</label>
            <div >
                @Html.EditorFor(model => model.CarLocation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CarLocation, "", new { @class = "text-danger" })
            </div>
      </div> 
					
       <div class="form-group">
            <label>Price Per Day</label>
            <div >
                @Html.EditorFor(model => model.PricePerDay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PricePerDay, "", new { @class = "text-danger" })
            </div>
      </div> 

					
     <div class="form-group">
            <label>Price Per Extra Mile</label>
            <div >
                @Html.EditorFor(model => model.PricePerExtraMile, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PricePerExtraMile, "", new { @class = "text-danger" })
            </div>
      </div> 

	<div class="form-group">
            <label>Allowed Mileage Per Day</label>
            <div >
                @Html.EditorFor(model => model.AllowedMileagePerDay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AllowedMileagePerDay, "", new { @class = "text-danger" })
            </div>
      </div> 
	
     
       <button class="btn btn-primary " name="submit" type="submit">
        Submit
       </button>     
				
   </div>
  </div>
 </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
